<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cast_vote"
    android:layout_width="match_parent"
    android:background="#b7e6e9"
    android:layout_height="match_parent"
   android:gravity="center"
   android:orientation="vertical"
    tools:context="com.example.admin.myapplication.cast_vote">
<LinearLayout
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:background="#fff"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/ques"
        android:layout_margin="20dp"
        android:textColor="#000"
        android:text="Question"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_grp"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:textColor="#4ded65"
            android:id="@+id/radio1"
            android:buttonTint="#000"
            android:layout_height="wrap_content" />


    <RadioButton
        android:layout_width="wrap_content"
        android:textColor="#4fe769"
        android:id="@+id/radio2"
        android:buttonTint="#000"
        android:layout_height="wrap_content" />

    <RadioButton
        android:layout_width="wrap_content"
        android:buttonTint="#000"
        android:textColor="#6ce970"
        android:id="@+id/radio3"
        android:layout_height="wrap_content" />

    <RadioButton
        android:layout_width="wrap_content"
        android:buttonTint="#000"
        android:textColor="#51e954"
        android:id="@+id/radio4"
        android:layout_height="wrap_content" />

    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_grp_opinion"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:textColor="#5ced72"
            android:id="@+id/radio1_opinion"
            android:buttonTint="#000"
            android:layout_height="wrap_content" />


        <RadioButton
            android:layout_width="wrap_content"
            android:textColor="#5df974"
            android:id="@+id/radio2_opinion"
            android:buttonTint="#000"
            android:layout_height="wrap_content" />



    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:backgroundTint="#52de5c"
        android:textColor="#000"
        android:text="Submit"
        android:onClick="submit"
        android:clickable="true"
        android:layout_marginLeft="130dp"

        />
</LinearLayout>

</LinearLayout>
