<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.admin.myapplication.AddPoll"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


<RelativeLayout

android:id="@+id/activity_add_poll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34739c">




<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANDIDATE POLL"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:id="@+id/addpoll"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter Poll Information:"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:id="@+id/addpoll1"
        android:layout_below="@id/addpoll"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poll Details"
        android:textSize="20dp"
        android:textColor="#f7efef"
        android:layout_margin="10dp"
        android:id="@+id/addpoll2"
        android:layout_below="@id/addpoll1"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:layout_toRightOf="@+id/addpoll2"
        android:layout_below="@id/addpoll1"
        android:background="@drawable/rectangle"
        android:layout_marginTop="10dp"
        android:id="@+id/details_et"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Polling Date"
        android:textSize="20dp"
        android:textColor="#f7efef"
        android:layout_margin="10dp"
        android:id="@+id/addpoll3"
        android:layout_below="@id/details_et"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/addpoll3"
        android:layout_below="@id/details_et"
        android:background="@drawable/rectangle"
        android:padding="10dp"
        android:onClick="open_calender"
        android:editable="false"
        android:layout_marginTop="10dp"
        android:id="@+id/addpoll4"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Polling Time"
        android:textSize="20dp"
        android:textColor="#f7efef"
        android:layout_margin="10dp"
        android:id="@+id/txt"
        android:layout_below="@id/addpoll4"/>
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt"
        android:layout_below="@id/addpoll4"
        android:background="@drawable/rectangle"
android:padding="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/addpoll5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to"

        android:textSize="20dp"
        android:textColor="#f7efef"
        android:layout_margin="10dp"
        android:id="@+id/txt1"
        android:layout_below="@id/addpoll4"
        android:layout_toRightOf="@id/addpoll5"/>
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt1"
        android:layout_below="@id/addpoll4"
        android:background="@drawable/rectangle"
android:padding="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/addpoll6"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill options:"
        android:textSize="20dp"
        android:textColor="#fdfbfb"
        android:layout_marginTop="40dp"
        android:id="@+id/option"
        android:layout_below="@id/addpoll5"
        android:layout_marginLeft="10dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative"
        android:background="@drawable/buttonrec"
        android:layout_below="@+id/option"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chk1"

            android:layout_margin="10dp"
            />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chk1"
            android:background="@drawable/rectangle"
            android:layout_margin="15dp"
            android:id="@+id/edit1"
            android:paddingLeft="5dp"

            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chk2"
            android:layout_below="@id/chk1"
            android:layout_margin="10dp"
            />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@+id/chk2"
            android:layout_below="@+id/edit1"
            android:background="@drawable/rectangle"
            android:layout_margin="15dp"
            android:id="@+id/edit2"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chk3"
            android:layout_below="@id/chk2"
            android:layout_margin="10dp"
            />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chk3"
            android:layout_below="@+id/edit2"
            android:background="@drawable/rectangle"
            android:layout_margin="15dp"
           android:paddingLeft="5dp"
            android:id="@+id/edit3"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chk4"
            android:layout_below="@id/chk3"
            android:layout_margin="10dp"
            />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chk4"
            android:layout_below="@+id/edit3"
            android:background="@drawable/rectangle"
            android:layout_margin="15dp"
            android:id="@+id/edit4"
            android:paddingLeft="5dp"
            />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/submit"
        android:background="@drawable/rectangle"
        android:text="submit"
        android:layout_below="@+id/relative"
        android:onClick="add_poll"/>
</RelativeLayout>
</ScrollView>