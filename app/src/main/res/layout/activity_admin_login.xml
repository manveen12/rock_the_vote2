<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.admin.myapplication.AdminLogin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#b7e6e9"
        android:scaleType="centerCrop"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock The Vote"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#34739c"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:id="@+id/text1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:text="our vote is our voice"
        android:textColor="#34739c"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:id="@+id/textt"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="email address"
        android:gravity="center"
        android:textColorHint="#686464"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonrec"
        android:id="@+id/edit1"
        android:layout_marginTop="50dp"
        android:layout_below="@id/textt"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:hint="password"
        android:textColor="#000"
        android:textColorHint="#686464"
        android:layout_centerInParent="true"
        android:background="@drawable/buttonrec"
        android:layout_below="@id/edit1"
        android:layout_marginTop="20dp"
        android:id="@+id/edit2"
        android:inputType="textPassword"
        android:imeOptions="actionDone"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="@drawable/rectangle"
        android:layout_centerInParent="true"
        android:text=" login"
        android:textColor="#34739c"
        android:id="@+id/login_btn"
        android:layout_below="@+id/edit2"
        android:layout_margin="40dp"
        android:onClick="login"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="no account yet?click to create."
        android:textSize="20dp"
        android:textColor="#34739c"
        android:id="@+id/register_btn"
        android:layout_below="@id/login_btn"
        android:clickable="true"
        android:onClick="opensignup"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_btn"
        android:text="Forget Password?"
        android:layout_centerInParent="true"
        android:textColor="#34739c"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:onClick="forget"
        android:clickable="true"
        
        />
</RelativeLayout>
