<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b7e6e9"
    tools:context="com.example.admin.myapplication.AdminOptions">


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:text="Rock The Vote"
        android:textColor="#34739c"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_centerInParent="true"
        android:text="our vote is our voice"
        android:textColor="#34739c"
        android:textSize="20dp" />


    <Button
        android:id="@+id/addpoll"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/buttonrec"
        android:text="Add poll"
        android:textColor="#34739c" />

    <Button
        android:id="@+id/cal_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/addpoll"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@drawable/buttonrec"
        android:text="Calculate Result"
        android:textColor="#34739c" />

    <Button
        android:id="@+id/home_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cal_id"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@drawable/buttonrec"
        android:text="go to home page"
        android:textColor="#34739c" />
</RelativeLayout>


