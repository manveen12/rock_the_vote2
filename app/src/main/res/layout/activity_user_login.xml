<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.admin.myapplication.UserLogin">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/rock"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a216251a">

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock The Vote"
        android:textStyle="italic"
        android:textSize="40dp"
        android:textColor="#5ddfd0"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:id="@+id/text1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:text="your vote is your voice"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:id="@+id/textt"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="email address"
        android:gravity="center"
        android:textColorHint="#000"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonrec"
        android:id="@+id/edit1"
        android:layout_marginTop="50dp"
        android:layout_below="@id/textt"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:hint="password"
        android:textColorHint="#000"
        android:layout_centerInParent="true"
        android:background="@drawable/buttonrec"
        android:layout_below="@id/edit1"
        android:layout_marginTop="20dp"
        android:id="@+id/edit2"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="@drawable/rectangle"
        android:layout_centerInParent="true"
        android:text=" login"
        android:textColor="#fff"
        android:onClick="login"
        android:id="@+id/login_btn"
        android:layout_below="@id/edit2"
        android:layout_margin="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="no account yet?click to create."
        android:textSize="20dp"
        android:textColor="#5ddfd0"
        android:id="@+id/register_btn"
        android:layout_below="@id/login_btn"
        android:clickable="true"
        android:onClick="opensignup"/>
</RelativeLayout>
